!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Tecnobest'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'Tecnobest'}"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    -#  Modernizr is required for Zurb Foundation 4
    = javascript_include_tag "vendor/custom.modernizr"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    %header
      -#%ul.button-group
        %li.button English
        %li.button Portuguese
      = render 'layouts/navigation'
      %h1.logo.small-2 TecnoBest
    %main{:role => "main"}
      = render 'layouts/messages'
      = yield
    %footer
